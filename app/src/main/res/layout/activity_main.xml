<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yellow.trikingdom.MainActivity"
    >

     <android.support.constraint.ConstraintLayout
         android:id="@+id/container_map"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintBottom_toTopOf="@id/guide_down"
         app:layout_constraintTop_toTopOf="parent">

          <ImageButton
              android:id="@+id/map_btn"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:background="@drawable/map_all"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/year_seekbar"
              />
          <SeekBar
              android:id="@+id/year_seekbar"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:paddingTop="5dp"
              app:layout_constraintLeft_toRightOf="@id/year_decrease_ibtn"
              app:layout_constraintRight_toLeftOf="@id/year_incresae_ibtn"
              app:layout_constraintBottom_toTopOf="@+id/year_event_tv"
              />
          <ImageButton
              android:id="@+id/year_decrease_ibtn"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:layout_constraintBottom_toTopOf="@id/year_event_tv"
              app:layout_constraintLeft_toLeftOf="parent"/>
          <ImageButton
              android:id="@+id/year_incresae_ibtn"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:layout_constraintBottom_toTopOf="@id/year_event_tv"
              app:layout_constraintRight_toRightOf="parent"/>
          <TextView
              android:id="@+id/year_event_tv"
              android:layout_width="368dp"
              android:layout_height="wrap_content"
              android:text="公元198年，群雄割据"
              android:gravity="center"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"/>

     </android.support.constraint.ConstraintLayout>

     <LinearLayout
         android:id="@+id/guide_down"
         android:orientation="horizontal"
         android:layout_width="0dp"
         android:layout_height="65dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintLeft_toLeftOf="parent">

          <LinearLayout
              android:id="@+id/guide_map"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:gravity="center">
               <ImageButton
                   android:layout_width="45dp"
                   android:layout_height="45dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="地图"
                   android:textSize="12sp"/>

          </LinearLayout>

          <LinearLayout
              android:id="@+id/guide_people"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:gravity="center">
               <ImageButton
                   android:layout_width="45dp"
                   android:layout_height="45dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="人物"
                   android:textSize="12sp"/>

          </LinearLayout>

          <LinearLayout
              android:id="@+id/guide_events"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:gravity="center">
               <ImageButton
                   android:layout_width="45dp"
                   android:layout_height="45dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="大事件"
                   android:textSize="12sp"/>

          </LinearLayout>

     </LinearLayout>

</android.support.constraint.ConstraintLayout>
